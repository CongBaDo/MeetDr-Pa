<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColorPrimary"
    tools:context=".activity.guideactivity.GuideActivity">

    <android.support.v4.view.ViewPager
        android:overScrollMode="never"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toTopOf="@id/buttonSkip"
        app:layout_constraintTop_toTopOf="parent" />

    <me.relex.circleindicator.CircleIndicator
        app:ci_width="5dp"
        app:ci_height="5dp"
        app:ci_drawable="@drawable/circle_indicator"
        android:id="@+id/circleIndicator"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/viewPager"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/buttonSkip"
        style="@style/transparentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide_button_skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/viewPager" />

    <Button
        android:id="@+id/buttonContinue"
        style="@style/transparentButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guide_button_continue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</android.support.constraint.ConstraintLayout>