<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="textNormal">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">#7F7F7F</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="textLink">
        <item name="android:textSize">12pt</item>
        <item name="android:textColor">#23D4D3</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="centerTextView">
        <item name="android:gravity">center_horizontal</item>
    </style>
    <style name="leftTextView">
        <item name="android:gravity">left</item>
    </style>

    <style name="MyButton">
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <style name="buttonInactive" parent="@style/MyButton">
        <item name="android:background">@color/colorInActiveBtn</item>
        <item name="android:textColor">@color/colorTextInActiveBtn</item>

    </style>

    <style name="buttonActive" parent="@style/MyButton">
        <item name="android:background">@drawable/rounded</item>
        <item name="android:textColor">@color/colorTextActiveBtn</item>
    </style>
    <style name="transparentButton" parent="@style/MyButton">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@android:color/holo_blue_dark</item>
    </style>
    <style name="heading">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="section">
        <item name="android:textSize">12sp</item>
    </style>
</resources>
